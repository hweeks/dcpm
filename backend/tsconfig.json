{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "es2022",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "types": ["@types/jest", "node"]
  },
  "include": ["./lib/global.d.ts", "./**/*.ts"]
}
