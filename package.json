{
  "name": "dcpm",
  "version": "1.0.0",
  "description": "the monorepo for the dcpm cli and server",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "yarn workspaces foreach -piv -j 32 run lint",
    "dev": "yarn workspaces foreach -piv -j 32 run dev",
    "lint:commit": "commitlint --from=HEAD~1",
    "build": "yarn workspaces foreach -piv -j 32 run build",
    "test": "yarn workspaces foreach -piv -j 32 run test",
    "test:publish": "yarn workspaces foreach -piv -j 32 run prepublishOnly",
    "release": "yarn workspaces foreach -v run semantic-release",
    "commit": "git-cz",
    "emulate:ci": "yarn lint && yarn test && yarn test:publish && yarn release"
  },
  "private": true,
  "dependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "commitizen": "4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.19.0",
    "node-gyp": "8.4.1",
    "prettier": "2.5.1",
    "typescript": "3.9.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@types/node": "12.12.36"
  },
  "packageManager": "yarn@3.1.0",
  "workspaces": [
    "backend",
    "cli",
    "docs",
    "frontend"
  ],
  "devDependencies": {
    "eslint-config-prettier": "8.3.0"
  }
}
