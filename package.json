{
  "name": "dcpm",
  "version": "1.0.0",
  "description": "the monorepo for the dcpm cli and server",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "yarn workspaces foreach run lint",
    "dev": "yarn workspaces foreach -piv -j 32 run dev",
    "lint:commit": "commitlint --from=HEAD~1",
    "build": "yarn workspaces foreach build",
    "test": "yarn workspaces foreach test",
    "test:publish": "yarn workspaces foreach prepublishOnly",
    "release": "yarn workspaces foreach semantic-release --concurrency 1",
    "commit": "git-cz",
    "clean": "lerna exec -- rm -rf node_modules/",
    "emulate:ci": "yarn clean && yarn run postinstall && yarn lint && yarn test && yarn test:publish && yarn release"
  },
  "private": true,
  "dependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "commitizen": "4.0.4",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.19.0",
    "node-gyp": "8.4.1",
    "typescript": "3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@3.1.0",
  "workspaces": [
    "backend",
    "cli",
    "docs",
    "frontend"
  ]
}
